            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                style="@style/aqi_more_normal"
                android:layout_marginBottom="1dp"
                android:text="@string/moving_average_concentration" />
            <TextView
                style="@style/aqi_more_normal"
                android:text="@string/hour_concentration"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/aqi_more_value"
                android:id="@+id/text_pm_2_5_avg"
                android:layout_marginBottom="1dp"
                tools:text="15" />
            <TextView
                style="@style/aqi_more_value"
                android:id="@+id/text_pm_2_5"
                tools:text="9"/>
        </LinearLayout>
    </TableRow>
    <TableRow
        android:layout_marginBottom="1dp">

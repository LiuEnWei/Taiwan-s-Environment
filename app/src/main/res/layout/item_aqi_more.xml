        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                style="@style/aqi_more_value"
                android:id="@+id/text_pm_10_avg"
                android:layout_marginBottom="1dp"
                tools:text="27" />
            <TextView
                style="@style/aqi_more_value"
                android:id="@+id/text_pm_10"
                tools:text="25"/>
        </LinearLayout>
    </TableRow>
    <TableRow

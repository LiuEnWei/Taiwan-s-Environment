    </TableRow>
    <TableRow
        android:layout_marginBottom="1dp">
        <TextView
            style="@style/aqi_more_title"
            android:text="@string/s_o_2_title"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2">
